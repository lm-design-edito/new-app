{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "types": [
      "node"
    ],
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": "./",
    "paths": {
      "~/apps": ["apps/index.tsx"],
      "~/apps/*": ["apps/*"],
      "~/components/*": ["components/*"],
      "~/config": ["shared/config.ts"],
      "~/shared": ["shared/index.tsx"],
      "~/shared/*": ["shared/utils/*"],
      "~/theme/*": ["theme/*"],
      "~/utils/*": ["utils/*"],
    }
  }
}
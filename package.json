{
  "name": "new-app",
  "version": "1.0.0",
  "type": "module",
  "author": "Le Monde - Service Design Éditorial, Elsa Delmas, Maxime Fabas, Thomas Steffen, Léa Tanda",
  "license": "ISC",
  "description": "This package contains unstyled Preact components and generic utility functions for building rich interactive articles at Le Monde.",
  "repository": {
    "type": "git",
    "url": "https://github.com/lm-design-edito/new-app.git"
  },
  "scripts": {
    "log": "git log --pretty=format:\"%h%x09%an%x09%ad%x09%s\"",
    "remove-ds-stores": "find . -name \".DS_Store\" -type f -delete",
    "build-lib": "tsc --project scripts/tsconfig.json && node .scripts.dist/build.lib.js",
    "build-dist:dev": "tsc --project scripts/tsconfig.json && node .scripts.dist/build.dist.dev.js",
    "build-dist:prod": "tsc --project scripts/tsconfig.json && NODE_ENV=production node .scripts.dist/build.dist.prod.js",
    "build-server:dev": "tsc --project server/tsconfig.json --watch",
    "build-server:prod": "tsc --project server/tsconfig.json",
    "start-server:dev": "nodemon .server.dist/app.js",
    "start-server:prod": "NODE_ENV=production node .server.dist/app.js",
    "dev": "npm run remove-ds-stores && concurrently -n 'build-src,build-srv,serve    ' 'npm run build-dist:dev' 'npm run build-server:dev' 'npm run start-server:dev'",
    "prod": "npm run remove-ds-stores && npm run build-dist:prod && npm run build-server:prod && npm run start-server:prod",
    "start": "npm run dev",
    "publish-lib": "cd ./.lib && npm publish && cd ../",
    "predeploy": "npm run remove-ds-stores",
    "deploy": "tsc --project scripts/tsconfig.json && node .scripts.dist/deploy.js"
  },
  "peerDependencies": {
    "preact": "^10.18.1"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/chokidar": "^2.1.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.6",
    "@types/mime-types": "^2.1.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.26",
    "@types/prompts": "^2.4.9",
    "@types/sass": "^1.45.0",
    "@types/semver": "^7.5.8",
    "@types/throttle-debounce": "^5.0.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "esbuild": "^0.20.1",
    "esbuild-plugin-inline-image": "^0.0.9",
    "express": "^4.18.3",
    "glob": "^10.3.10",
    "jsdom": "^24.0.0",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.35",
    "postcss-modules": "^6.0.0",
    "preact": "^10.19.6",
    "prompts": "^2.4.2",
    "sass": "^1.71.1",
    "semver": "^7.6.0",
    "throttle-debounce": "^5.0.0",
    "tree-cli": "^0.6.7",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "preact": "^10.18.1"
  }
}
